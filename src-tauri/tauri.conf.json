{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ToolsLab",
  "version": "1.0.0",
  "identifier": "dev.toolslab.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000/lab",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ToolsLab - Developer Tools Suite",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1024,
        "minHeight": 600,
        "url": "/lab",
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY3ODdBMzg5NUI5NTA5NjMKUldUTXN6d2VKdnR5aSszVGlRRXZGZi91SHVJeHRMU2VIK1V5c0dIQ0tjZUJmdXRobmNVMU1wNUYK",
      "endpoints": [
        "https://github.com/hellotoolslab/toolslab/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2024 ToolsLab. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Professional developer tools suite",
    "longDescription": "ToolsLab is a comprehensive suite of developer tools including formatters, converters, encoders, and generators. All tools work offline and respect your privacy.",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": "en-US",
        "bannerPath": null,
        "dialogImagePath": null,
        "licenseUrl": null
      },
      "nsis": {
        "license": null,
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": null,
        "installMode": "perUser",
        "languages": ["English"]
      }
    }
  }
}
