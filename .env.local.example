# Environment Configuration for ToolsLab

# ==============================================================================
# ANALYTICS CONFIGURATION
# ==============================================================================

# ðŸŽ¯ MASTER SWITCH - Controls ALL analytics (TrackingManager + Umami)
# Set to 'true' to enable analytics, 'false' to disable completely
# This is the ONLY parameter you need to control analytics on/off
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Umami Analytics Configuration (required if ANALYTICS_ENABLED=true)
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-website-id-here
NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://cloud.umami.is/script.js
NEXT_PUBLIC_UMAMI_HOST_URL=https://cloud.umami.is

# Debug mode (shows console logs and debug panel)
# Set to 'true' for development, 'false' for production
NEXT_PUBLIC_UMAMI_DEBUG=false

# Ahrefs Analytics Configuration (optional)
NEXT_PUBLIC_AHREFS_KEY=your-ahrefs-key-here

# ==============================================================================
# EXAMPLES
# ==============================================================================

# Development with analytics enabled:
#   NEXT_PUBLIC_ANALYTICS_ENABLED=true
#   NEXT_PUBLIC_UMAMI_DEBUG=true

# Development without analytics:
#   NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Production with analytics:
#   NEXT_PUBLIC_ANALYTICS_ENABLED=true
#   NEXT_PUBLIC_UMAMI_DEBUG=false

# Production without analytics (testing):
#   NEXT_PUBLIC_ANALYTICS_ENABLED=false

# ==============================================================================
# OTHER SETTINGS
# ==============================================================================

NODE_ENV=development
NEXT_PUBLIC_SITE_URL=https://toolslab.dev

# PDF Converter Service (Railway)
# URL of the external PDF converter microservice
# Development: http://localhost:8080
# Production: https://your-service.up.railway.app
NEXT_PUBLIC_PDF_CONVERTER_URL=http://localhost:8080

# Local Development Overrides
LOCAL_OVERRIDE_ADS=false
LOCAL_OVERRIDE_MAINTENANCE=false
LOCAL_OVERRIDE_PRO=true
LOCAL_OVERRIDE_BETA=true
