{
  "name": "toolslab",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "dev": "rm -rf .next && next dev",
    "build": "npm run prebuild && next build",
    "start": "next start",
    "lint": "next lint",
    "prebuild": "rm -rf .next .vercel/output node_modules/.cache *.tsbuildinfo .tsbuildinfo",
    "postbuild": "echo 'Build completed successfully'",
    "clean": "rm -rf .next .vercel node_modules package-lock.json *.tsbuildinfo",
    "clean:cache": "rm -rf .next/cache node_modules/.cache .cache .turbo",
    "reinstall": "npm run clean && npm install",
    "verify": "npm run lint && npm run build",
    "preinstall": "node scripts/pre-install.js || true",
    "build:prod": "NEXT_PUBLIC_ENABLE_ADS=true next build",
    "build:check": "next build --no-lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "analyze": "ANALYZE=true next build",
    "analyze:size": "ANALYZE=true next build",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:e2e": "jest __tests__/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "status:check": "node scripts/status-check.js",
    "logs:production": "echo 'Configure with your deployment provider'",
    "seo:discover": "tsx scripts/seo-discover.ts",
    "seo:submit": "tsx scripts/seo-submit.ts",
    "seo:monitor": "tsx scripts/seo-monitor.ts",
    "seo:generate-key": "tsx scripts/generate-indexnow-key.ts",
    "seo:full": "npm run seo:discover && npm run seo:submit && npm run seo:monitor",
    "test:og-images": "tsx scripts/test-og-images.ts",
    "test:og-images:prod": "tsx scripts/test-og-images.ts --base-url https://toolslab.dev",
    "pre-commit": "lint-staged",
    "prepare": "echo 'Skipping husky setup in production'",
    "edge-config:dev": "node scripts/dev-edge-config.js",
    "edge-config:health": "curl -s http://localhost:3001/health | jq",
    "edge-config:populate": "node scripts/populate-edge-config.js",
    "edge-config:test": "curl -s \"$EDGE_CONFIG\" | jq",
    "edge-config:show": "node scripts/manage-edge-config.js show",
    "edge-config:manage": "node scripts/manage-edge-config.js",
    "local:config": "node scripts/local-config.js",
    "local:ads": "node scripts/local-config.js ads",
    "local:maintenance": "node scripts/local-config.js maintenance",
    "local:clear": "node scripts/local-config.js clear-all",
    "edge-config:enable:base64": "node scripts/manage-edge-config.js enable base64-encode",
    "edge-config:disable:base64": "node scripts/manage-edge-config.js disable base64-encode",
    "local:base64:test": "node scripts/local-config.js test-tool base64-encode",
    "indexnow:submit": "node scripts/indexnow-submit.js",
    "indexnow:bulk": "node scripts/indexnow-bulk.js",
    "indexnow:stats": "node scripts/indexnow-stats.js",
    "indexnow:test": "node scripts/indexnow-test.js",
    "tauri": "npx tauri",
    "tauri:dev": "npx tauri dev",
    "build:tauri": "npm run build",
    "tauri:build": "npx tauri build",
    "tauri:build:debug": "npx tauri build --debug",
    "tauri:build:release": "npm run build:tauri && npx tauri build",
    "release:patch": "npm version patch && git push origin --tags",
    "release:minor": "npm version minor && git push origin --tags",
    "release:major": "npm version major && git push origin --tags"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@types/node": "^22.7.6",
    "@types/qrcode": "^1.5.5",
    "@vercel/edge-config": "^1.4.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "cron-parser": "^5.3.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "jszip": "^3.10.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.451.0",
    "next": "^14.2.32",
    "next-themes": "^0.3.0",
    "open": "^10.2.0",
    "papaparse": "^5.4.1",
    "plausible-tracker": "^0.3.9",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-resizable-panels": "^2.1.4",
    "sonner": "^1.5.0",
    "sql-formatter": "^15.4.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "uuid": "^10.0.0",
    "zod": "^4.1.9",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.15",
    "@tauri-apps/cli": "^2.8.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.0",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "babel-plugin-import": "^1.13.8",
    "cors": "^2.8.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.15",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
