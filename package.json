{
  "name": "toolslab",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:ads": "NEXT_PUBLIC_ENABLE_ADS=true next dev",
    "build": "npm run clean-all && next build && npm run clean-cache",
    "clean-cache": "rm -rf .next/cache .next/standalone/.next/cache || true",
    "clean-all": "npm run clean-next && npm run clean-ts && npm run clean-node",
    "clean-next": "rm -rf .next .next/cache .next/standalone out dist build || true",
    "clean-ts": "rm -rf *.tsbuildinfo .tsbuildinfo tsconfig.tsbuildinfo **/.tsbuildinfo .tscache || true",
    "clean-node": "rm -rf node_modules/.cache .npm .eslintcache .stylelintcache || true",
    "clean-vercel": "rm -rf .vercel deployment-cache build-cache || true",
    "clean-reset": "npm run clean-all && npm run clean-vercel && rm -rf node_modules && npm install",
    "build:prod": "NEXT_PUBLIC_ENABLE_ADS=true next build",
    "build:check": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "analyze": "ANALYZE=true next build",
    "analyze:size": "ANALYZE=true next build",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:e2e": "jest __tests__/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "status:check": "node scripts/status-check.js",
    "logs:production": "echo 'Configure with your deployment provider'",
    "seo:discover": "tsx scripts/seo-discover.ts",
    "seo:submit": "tsx scripts/seo-submit.ts",
    "seo:monitor": "tsx scripts/seo-monitor.ts",
    "seo:generate-key": "tsx scripts/generate-indexnow-key.ts",
    "seo:full": "npm run seo:discover && npm run seo:submit && npm run seo:monitor",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "edge-config:dev": "node scripts/dev-edge-config.js",
    "edge-config:health": "curl -s http://localhost:3001/health | jq",
    "edge-config:populate": "node scripts/populate-edge-config.js",
    "edge-config:test": "curl -s \"$EDGE_CONFIG\" | jq",
    "edge-config:show": "node scripts/manage-edge-config.js show",
    "edge-config:manage": "node scripts/manage-edge-config.js",
    "local:config": "node scripts/local-config.js",
    "local:ads": "node scripts/local-config.js ads",
    "local:maintenance": "node scripts/local-config.js maintenance",
    "local:clear": "node scripts/local-config.js clear-all",
    "edge-config:enable:base64": "node scripts/manage-edge-config.js enable base64-encode",
    "edge-config:disable:base64": "node scripts/manage-edge-config.js disable base64-encode",
    "local:base64:test": "node scripts/local-config.js test-tool base64-encode"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.0",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-sql": "^6.0.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@uiw/react-codemirror": "^4.23.0",
    "@vercel/analytics": "^1.3.1",
    "@vercel/edge-config": "^1.4.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.1",
    "comlink": "^4.4.1",
    "critters": "^0.0.23",
    "cron-parser": "^5.3.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "jszip": "^3.10.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.451.0",
    "next": "^14.2.32",
    "next-themes": "^0.3.0",
    "papaparse": "^5.4.1",
    "plausible-tracker": "^0.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-resizable-panels": "^2.1.4",
    "sharp": "^0.33.5",
    "sonner": "^1.5.0",
    "sql-formatter": "^15.4.2",
    "stripe": "^14.25.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.5",
    "uuid": "^10.0.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.15",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^22.7.6",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "autoprefixer": "^10.4.20",
    "babel-plugin-import": "^1.13.8",
    "cors": "^2.8.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.15",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
