# Environment Configuration Template
# Copy this file to .env.local and fill with your actual values

# Vercel Edge Config
EDGE_CONFIG=your-edge-config-url-here
EDGE_CONFIG_ID=your-edge-config-id-here

# Admin Access
ADMIN_SECRET_KEY=your-admin-secret-key
VERCEL_API_TOKEN=your-vercel-api-token

# Environment
VERCEL_ENV=development
NODE_ENV=development

# Analytics - Replace with your actual Umami IDs
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-umami-website-id
NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://cloud.umami.is/script.js
NEXT_PUBLIC_UMAMI_HOST_URL=https://cloud.umami.is

# Local Development Overrides
LOCAL_OVERRIDE_ADS=false
LOCAL_OVERRIDE_MAINTENANCE=false
LOCAL_OVERRIDE_PRO=false
LOCAL_OVERRIDE_BETA=false

# Feature Flags
NEXT_PUBLIC_ENABLE_ADS=false
NEXT_PUBLIC_ENABLE_PRO=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# VPN Support Configuration
NEXT_PUBLIC_VPN_MODE_ENABLED=true
NEXT_PUBLIC_ALLOW_INSECURE_CONNECTIONS=false
NEXT_PUBLIC_VPN_DEBUG_MODE=false